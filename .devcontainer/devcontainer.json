{
	"name": "Existing Dockerfile",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"Vue.volar",
				"bradlc.vscode-tailwindcss"
			]
		}
	},
	"runArgs": [
		"--cap-add",
		"PERFMON",
		"-p",
		"3000:3000",
		"-p",
		"3001:3001",
		"-v",
		"cargo-cache:/usr/local/cargo"
	],
	"postCreateCommand": "zsh .devcontainer/postinstall.sh"
}